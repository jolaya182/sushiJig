extends layout

block content
  section.search-block.position-relaive
    .content.medium-padding
      .content-md-width
        h1.subheadline.white.align-center
          |  Search Movies & Shows
        form#form1.search.position-relaive(accept-charset='UTF-8', action='', method='', role='search')
          input#searchTitle.search-curtain.query(name='query', placeholder='Find movies and Shows (e.g Silicon Valley)', type='search' autocomplete='off')
          input(name='commit', type='submit', value='Search')
          //button.gap-top-small Search
        .famous-search.gap-top-small.white
          strong.white
            |  Popular Searches:
          a.topic-links(href='/some_movie')
            | Wicked Tuna
          | ,
          a.topic-links(href='/some_movie')
            | Riddick
          | ,
          a.topic-links(href='/some_movie')
            | The Matrix

  section.show-results.position-relaive
    .content.medium-padding
      #movieContainer.grid-3-at-large.grid-2-at-medium.align-center.grid-row-equal-heights
        .column
          .movie-pos.teal-bg.small-pad
            h4.white
              |  Movie 1
            p.white
              |  Render the movie image along with
              |  a little description about it, and
              |  a link to a site to watch it.
              |  Use AJAX, React and more.
        .column
          .movie-pos.yellow-bg.small-pad
            h4.white
              |  Movie 2
        .column
          .movie-pos.teal-bg.small-pad
            h4.white
              |  Movie 3
